---
import { Image } from 'astro:assets';
interface Props {
  title: string;
  date: string;
  body: string;
  image: string;
}

const { title, image, date, body } = Astro.props
---

<div class="blog-container">
  <div class="image-container-blog">
    <Image class="image-blog" 
    src={ image }  
    alt="announce" 
    width="300" 
    height="200"/>
  </div>
  <div class="content-blog">

    <h2 class="title-blog">{ title }</h2>
    <span class="underline-title"></span>
    <p class="date">{date}</p>
    <p class="body-blog">{ body }</p>

  </div>

</div>

<style is:inline>
:root {
  --color-primary: hsl(86deg 100 37);
}

.blog-container {
  display: flex;
  inline-size: auto;
}


.underline-title {
  inline-size: 50%;
  background-color: var(--color-primary);
}


.image-container-blog {
  width: 60%;
  height: 4em;
  padding-block-start: 1em;
  padding: 1em;
}

.body-blog,
.date {
  inline-size: 90%;
}

.image-blog {
  inline-size: 80%;
  height: 6em;

  @media (width >= 48rem) {
    height: 10em;
  }
}

.content-blog {
  inline-size: 66%;
}
</style>