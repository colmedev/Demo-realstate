---
interface Props {
  bottom?: boolean;
}

const { bottom } = Astro.props
---

<ul class={bottom ? 'bottom' : 'list'}>
  <slot />
</ul>

<style is:inline>
  .list {
    display: flex;
    gap: 1rem;
    flex-direction: column;

    @media (width >= 48rem) {
      flex-direction: row;
    }
  }
  .list-item {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    padding-block: .5rem;
  }

  .bottom {
    display: flex;
    flex-direction: column;
  }
</style>