---
interface Props {
  image?: string;
  title?: string;
  body?: string;
}
const { image, title ,body } = Astro.props
---

  <section class="art-cont">
    <article class="info">
        <img src={image} alt="icon" >
      <h3 class="title-section">{title}</h3>
      <p class="body-section">{body}</p>
    </article>
  </section>



<style>
.art-cont {
  inline-size: 50%;
}

.info {
  padding-inline: 1rem;
  padding-block-start: 2.5rem;
  text-align: center;
}

.title-section {
  font-size: 1.5rem;
}

.body-section {
  line-height: 1.5;
  font-size: 1rem;
}
</style>