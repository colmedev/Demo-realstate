---
interface Props {
  body: string;
}

const { body } = Astro.props
---

<div class="testimonial-container">  
  <p class="content-testimonial">{ body } -Miguel</p>
</div>

<style is:inline>

.testimonial-container{
  display: flex;
  background-color: var(--bg-color-primary);
  align-items: center;
  line-height: 24px;
  width: 60%;
  justify-content: center;
  margin: 4em;
  border-radius: 5%;
}

.content-testimonial {
  text-align: center;

  border-radius: 10%; 
  width: 58%;
  padding: 1.5em;
}

</style>