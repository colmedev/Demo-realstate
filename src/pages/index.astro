<style is:global>
	*, *::before, *::after {
    box-sizing: inherit;
}

:root{
	--letter-color: hsl(0deg 0 100); 
	--bg-color-primary: hsl(86deg 100 37); 
  --bg-color-secondary: hsla(44deg 98 50);
	--bg-color: hsla(0deg 29 93);
	--border-color: hsla(0deg 0 70);
	--bg-color-footer: hsl(0deg 1 14);
}


/*----------- Info Cont ------------*/
.info-cont {
  display: flex;
	flex-direction: column;
  align-items: center;
  justify-content: center;
  inline-size: 100%;
	@media(width >= 50rem) {
		flex-direction: row;
	}
}


/*----------- Announce Cont ------------*/
.cont {
	display: flex;
	flex-direction: column;
	padding-block: .5rem;
	align-items: center;
	gap: 1rem;

	@media(width >= 50rem){
		flex-direction: row;
		justify-content: space-between;
		padding-inline: .5rem;
	}
}



	.announce-section {
		text-align: center;
	}

	/*-----------	Parallax section	----------*/
	.parallax {
		background-image: url(../img/encuentra.jpg);
    height: 40svh;
    background-position: center center;
    background-size: cover;
    display: flex;
		flex-direction: column;
    align-items: center;

			@media (width >= 48rem) {
			background-image: url(/img/encuentra.jpg);
			display: flex;
    	flex-direction: column;
    	align-items: flex-start;
			background-attachment: fixed;
  		background-position: top;
  		background-repeat: no-repeat;
  		background-size: cover;
		}
	}



	.parallax-title {
		color: var(--letter-color);

		@media (width >= 48rem) {
			padding: 1.2rem;
			font-size: 3rem;
		}
	}




	.parallax-body {
		padding: .9rem;
		color: var(--letter-color);
		font-size: 1.3rem;
	}

	/*-----------	Blog and Testimonial section	----------*/
	.blog-section {
		display: flex;
		flex-direction: column;
	}

	.article-container {
		display: flex;
		flex-direction: column;
	}
</style>
